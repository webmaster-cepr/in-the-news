<?xml version="1.0" encoding="utf-8"?><form>        <fieldset>                				<field                        name="id"                        type="hidden"                />                				<field                        name="title"                        type="text"                        label="Headline"                        description="Headline of article"                        size="75"                        class="inputbox"                        default=""                />                <field                        name="url"                        type="text"                        label="URL"                        description="URL of article"                        size="75"                        class="inputbox"                        default=""                />									            <field                        name="publication"                        type="text"                        label="Publication"                        description="Where the article was published"                        size="75"                        class="inputbox"                        default=""                />												<field 						name="italicized" 						type="checkboxes"						label="Italicize Pub Name"						description="Print publications are italicized"						default="0"						>					<option value="0">No</option>					<option value="1">Yes</option>				</field>				                <field                        name="published"                        type="calendar"                        label="Date published"                        description="Date of article"                        default=""						format="%Y-%m-%d"                />					                <field                        name="source"                        type="text"						label="Expert"                        description="Expert mentioned in the article"                        size="75"                        class="inputbox"                        default=""                />					<field name="type" type="list" default="" label="Type of press hit" description="">					<option value="News">News</option>					<option value="Blogs">Blogs</option>					<option value="TV/Video">TV/Video</option>					<option value="Radio Interview">Radio Interview</option>				</field>										</fieldset></form>